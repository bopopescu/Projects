		server = new ServerSocket(12345);
	} catch (IOException e) {
		// TODO Auto-generated catch block
		e.printStackTrace();
	}
	
	
	
	//while(true){
	try {
	Socket client	= server.accept() ;
		Server thread= new Server (client) ;
				
		System.out.println("Demand reçue");
		
		thread.start();
		
		
		
	
		} 
		
		catch (IOException ioe) {}
		

